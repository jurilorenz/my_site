---
import MainLayout from "../../layouts/MainLayout.astro";

export async function getStaticPaths() {
  return [
    { 
      params: { projects: "1" }, 
      props: {
        name: "Astro Gallery",
        desc: "A beautiful, dynamic gallery powered by Astro. Showcasing responsive design and modern UI techniques.",
      },
    },
    { 
      params: { projects: "2" }, 
      props: {
        name: "React Portfolio",
        desc: "A modern portfolio built with React and Next.js, focusing on performance and a seamless user experience.",
      },
    },
    { 
      params: { projects: "3" }, 
      props: {
        name: "Mobile App",
        desc: "A sleek mobile app developed for iOS and Android platforms, using cutting-edge mobile development practices.",
      },
    },
    { 
      params: { projects: "4" }, 
      props: {
        name: "Firebase Integration",
        desc: "A Firebase-powered real-time data solution for high-performance, scalable applications.",
      },
    },
  ];
}

const { projects } = Astro.params;
const { name, desc } = Astro.props;
---

<MainLayout>
  <section class="mx-auto w-3/6">
    <img 
      src={`/images/${projects}.png`}  
      width="600" 
      height="600" 
      class="rounded shadow-md drop-shadow-[0px_35px_35px_rgba(135,206,250,0.6)]"
      alt={`Project ${name}`}
    />
    <h1 class="font-bold mt-4 text-4xl">Project {name}</h1>
    <p class="mt-2 text-gray-600 text-lg">{desc}</p>
    <a href="/projects">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded mt-4">
        Back to Projects
      </button>
    </a>
  </section>
</MainLayout>