---
import MainLayout from "../../layouts/MainLayout.astro";
import RoomContent from "../../components/RoomContent.astro";
import BattleContent from "../../components/BattleContent.astro";

export async function getStaticPaths() {
  return [
    { 
      params: { projects: "1" }, 
      props: {
        name: "Astro Gallery",
        desc: "A beautiful, dynamic gallery powered by Astro. Showcasing responsive design and modern UI techniques.",
      },
    },
    { 
      params: { projects: "2" }, 
      props: {
        name: "ROOM Planetarium",
        desc: "A captivating journey through the cosmos with immersive features like AR exploration and stellar sound design.",
      },
    },
    { 
      params: { projects: "3" }, 
      props: {
        name: "Battle Calculator",
        desc: "Turn math into a thrilling gaming experience with explosive sound and visual effects.",
      },
    },
    { 
      params: { projects: "4" }, 
      props: {
        name: "Firebase Integration",
        desc: "A Firebase-powered real-time data solution for high-performance, scalable applications.",
      },
    },
  ];
}

const { projects } = Astro.params;
const { name, desc } = Astro.props;
---

<MainLayout>
  <!-- Background with gradient similar to home page -->
  <div class="min-h-screen bg-gradient-to-b from-[#090a1a] to-[#290065] text-white">

    <!-- Title -->
    <h1 class="text-center text-4xl md:text-6xl font-bold drop-shadow-lg my-8">
      Project {name}
    </h1>

    <!-- Description -->
    <p class="text-center text-lg md:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto">
      {desc}
    </p>

    <!-- Project Image -->
    <section class="mx-auto w-11/12 md:w-8/12 lg:w-6/12 flex flex-col items-center">
      <img 
        src={`/images/${projects}.png`}  
        class="rounded shadow-md drop-shadow-[0px_-35px_35px_rgba(75,0,130,0.6)] object-contain w-full h-auto max-h-[50vh]"
        alt={`Project ${name}`}
      />
    </section>

    <!-- Dynamic Content for each project -->
    <section class="my-12 w-10/12 md:w-8/12 lg:w-7/12 mx-auto">
      {projects === '2' && <RoomContent />}
      {projects === '3' && <BattleContent />}
    </section>


    </div>
  </div>
</MainLayout>

<style>
  body {
    font-family: 'Inter', sans-serif;
  }
</style>