---
import MainLayout from "../../layouts/MainLayout.astro";
import RoomContent from "../../components/RoomContent.astro";
import BattleContent from "../../components/BattleContent.astro";
import ProfruketContent from "../../components/ProfruketContent.astro";
import MaaArt from "../../components/MaaArtContent.astro";

export async function getStaticPaths() {
  return [
    { 
      params: { projects: "1" }, 
      props: {
        name: "MAA Art",
        desc: "",
      },
    },
    { 
      params: { projects: "2" }, 
      props: {
        name: "ROOM Planetarium",
        desc: "",
      },
    },
    { 
      params: { projects: "3" }, 
      props: {
        name: "Battle Calculator",
        desc: "",
      },
    },
    { 
      params: { projects: "4" }, 
      props: {
        name: "ProFruket",
        desc: "",
      },
    },
  ];
}

const { projects } = Astro.params;
const { name, desc } = Astro.props;
---

<MainLayout>
  <!-- Background with gradient similar to home page -->
  <div class="min-h-screen text-white">

    <!-- Title -->
    <h1 class="text-center text-4xl md:text-6xl font-bold drop-shadow-lg mt-24 mb-8">
      Project {name}
    </h1>

    <!-- Description -->
    <p class="text-center text-lg px-4 md:text-2xl text-gray-300 mb-12 max-w-4xl mx-auto">
      {desc}
    </p>

    <!-- Project Image -->
    <section class="mx-auto w-11/12 md:w-8/12 lg:w-6/12 flex flex-col items-center">
      <img 
        src={`/images/${projects}.png`}  
        class="rounded shadow-md drop-shadow-[0px_-35px_35px_rgba(75,0,130,0.6)] object-contain w-full h-auto max-h-[50vh]"
        alt={`Project ${name}`}
      />
    </section>

    <!-- Dynamic Content for each project -->
    <section class="my-12 w-10/12 md:w-8/12 lg:w-7/12 mx-auto">
      {projects === '1' && <MaaArt />}
      {projects === '2' && <RoomContent />}
      {projects === '3' && <BattleContent />}
      {projects === '4' && <ProfruketContent />}
    </section>


    </div>
  </div>
</MainLayout>

<style>
  body {
    font-family: 'Inter', sans-serif;
  }
</style>