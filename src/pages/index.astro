---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout 
  title="Juri Lorenz Portfolio Site" 
  seoTitle="Juri Lorenz, App Developer Portfolio" 
  seoDesc="Innovative App Developer Specializing in Astro, React and Mobile Solutions"
  >

  <!-- Background with gradient -->
  <div class="min-h-screen bg-gradient-to-b from-[#090a1a] to-[#290065] text-white text-center flex flex-col items-center justify-center">
    
    <!-- Title -->
    <h1 class="text-4xl md:text-6xl font-bold drop-shadow-lg">
      The Web Developer You Need for Modern Apps
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-2xl mt-4 text-gray-300">
      Bringing innovative ideas to life with React, Astro and modern web technologies.
    </p>

    <!-- Buttons Section -->
    <div class="mt-8 flex flex-col md:flex-row gap-6 justify-center">
      
      <!-- Primary Button (like Get Started) -->
      <a href="/about" class="bg-white text-[#090a1a] font-bold py-3 px-8 rounded-full shadow-lg hover:bg-gray-200 transition-all">
        Learn My Story
      </a>

      <!-- Secondary Button (like npm command button) -->
      <a href="/projects" class="bg-[#1f1235] text-white font-bold py-3 px-8 rounded-full border-2 border-[#6d87d1] shadow-lg hover:bg-[#6d87d1] hover:text-white transition-all">
        Explore My Work
      </a>
    </div>
  </div>

</MainLayout>

<style>
  body {
    font-family: 'Inter', sans-serif;
  }
</style>