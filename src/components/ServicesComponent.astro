---
// ServicesComponent.astro
---

<div class="min-h-screen text-white py-20 md:py-40">
  
    <div class="text-center md:text-left w-11/12 md:w-10/12 lg:w-8/12 mx-auto mt-6 md:mt-0"> <!-- Adjusted margins -->

<!-- Content Section -->
<div class="min-h-screen text-white py-20 md:py-10">
  <div class="flex flex-col lg:flex-row justify-between w-11/12 md:w-10/12 lg:w-full lg:ml-0 mx-auto items-center md:items-start gap-16 md:gap-32">
    
    <!-- Left Section: Services, Main Motto, and Project Request Button -->
    <div class="lg:w-1/3 flex-shrink-0">
      <!-- Services -->
      <p class="text-lg md:text-xl font-medium text-gray-300">
        <span>Services</span><br />
      </p>

      <!-- Main Motto -->
      <p class="my-4 mb-16 text-3xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500" style="line-height: 1.2;">
        <span>Crafting Exceptional</span><br />
        <span>Digital Solutions</span>
      </p>

      <!-- Project Request Button -->
      <a href="/contact" class="relative inline-block py-3 px-8 rounded-full font-bold text-center w-full max-w-xs md:max-w-none md:w-auto bg-white text-[#090a1a] shadow-lg transition-all duration-300 ease-in-out hover:shadow-glow">
        Project Request
      </a>
    </div>

    <!-- Right Section: Services Accordion List -->
    <div class="accordion max-w-3xl w-full my-8 lg:mt-0 lg:w-2/3 px-6 md:px-0 lg:ml-auto lg:mr-8">
      
<!-- Category 1: Design -->
<div class="relative bg-[#1b1b33] p-8 rounded-xl border border-gray-700 shadow-[0px_0px_35px_rgba(147,112,219,0.6)] mb-8 category">
  <div class="absolute top-0 left-0 bg-gradient-to-r from-purple-400 to-blue-500 w-full h-2 rounded-t-xl"></div>
  <div class="flex justify-between items-center cursor-pointer p-6">
    <h3 class="text-3xl font-bold text-white">01 Design</h3>
    <span class="toggle-icon text-2xl text-white transition-transform duration-300">+</span>
  </div>
  <div class="services hidden mt-6">
    <!-- Service 1: Logo Creation -->
    <div class="relative bg-[#24244a] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">Logo Creation</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Crafting distinctive logos that resonate with your brand’s identity.</p>
    </div>
    <!-- Service 2: UI Design -->
    <div class="relative bg-[#2a2a4f] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">UI Design</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Delivering modern and user-friendly interfaces tailored for conversion.</p>
    </div>
  </div>
</div>

<!-- Category 2: Development -->
<div class="relative bg-[#1b1b33] p-8 rounded-xl border border-gray-700 shadow-[0px_0px_35px_rgba(147,112,219,0.6)] mb-8 category">
  <div class="absolute top-0 left-0 bg-gradient-to-r from-purple-400 to-blue-500 w-full h-2 rounded-t-xl"></div>
  <div class="flex justify-between items-center cursor-pointer p-6">
    <h3 class="text-3xl font-bold text-white">02 Development</h3>
    <span class="toggle-icon text-2xl text-white transition-transform duration-300">+</span>
  </div>
  <div class="services hidden mt-6">
    <!-- Service 1: Web Development -->
    <div class="relative bg-[#24244a] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">Web Development</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Building fast, scalable websites with a focus on SEO and mobile-first design.</p>
    </div>
    <!-- Service 2: CMS Implementation -->
    <div class="relative bg-[#2a2a4f] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">CMS Implementation</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Custom CMS solutions for seamless content management.</p>
    </div>
    <!-- Service 3: Native Mobile Development -->
    <div class="relative bg-[#24244a] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">Native Mobile Development (iOS and Android)</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Building high-performance, native iOS and Android applications.</p>
    </div>
    <!-- Service 4: API Integration -->
    <div class="relative bg-[#2a2a4f] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">API Integration</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Connecting your platform with third-party APIs for enhanced functionality.</p>
    </div>
  </div>
</div>

<!-- Category 3: Performance and Optimization -->
<div class="relative bg-[#1b1b33] p-8 rounded-xl border border-gray-700 shadow-[0px_0px_35px_rgba(147,112,219,0.6)] mb-8 category">
  <div class="absolute top-0 left-0 bg-gradient-to-r from-purple-400 to-blue-500 w-full h-2 rounded-t-xl"></div>
  <div class="flex justify-between items-center cursor-pointer p-6">
    <h3 class="text-3xl font-bold text-white">03 Performance and Optimization</h3>
    <span class="toggle-icon text-2xl text-white transition-transform duration-300">+</span>
  </div>
  <div class="services hidden mt-6">
    <!-- Service 1: PageSpeed Optimization -->
    <div class="relative bg-[#24244a] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">PageSpeed Optimization</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Boosting your site’s performance for faster load times and better SEO.</p>
    </div>
    <!-- Service 2: SEO Optimization -->
    <div class="relative bg-[#2a2a4f] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">Search Engine Optimization (SEO)</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Optimizing your site to rank higher and attract more organic traffic.</p>
    </div>
    <!-- Service 3: AI Integration -->
    <div class="relative bg-[#24244a] p-6 rounded-lg border border-gray-700 shadow-lg mb-6">
      <h4 class="text-2xl font-bold text-white mb-2">AI Integration</h4>
      <p class="text-lg text-gray-300 leading-relaxed">Adding AI solutions like chatbots or automation to enhance user experiences.</p>
    </div>
  </div>
</div>
</div>
</div>

<!-- Partnerships & Freelancing Section -->
<div class="relative bg-[#1b1b33] p-8 rounded-xl border border-gray-700 shadow-[0px_0px_35px_rgba(147,112,219,0.6)] transition-transform duration-500 py-12 w-9/12 mx-auto mt-24 text-center">
  <div class="absolute top-0 left-0 bg-gradient-to-r from-purple-400 to-blue-500 w-full h-2 rounded-t-xl"></div>
  <h3 class="text-4xl md:text-5xl font-bold text-white mb-4">Partnerships & Freelancing</h3>
  <p class="text-gray-300 mt-4 max-w-3xl mx-auto leading-relaxed">Collaborating with top web design agencies to deliver innovative and exceptional solutions. As a freelancer, I bring expertise in both frontend and backend development, enhancing your team with my specialized skills.</p>
  <div class="mt-8">
    <a href="/contact" class="bg-[#1f1235] text-white font-bold py-3 px-8 rounded-full border-2 border-[#6d87d1] shadow-lg hover:bg-[#6d87d1] hover:text-white transition-all text-center w-full max-w-xs md:max-w-none md:w-auto">
      Let's Talk
    </a> <!-- Applied the hover effect and created a new button title -->
  </div>
</div>

<script>
  // Simplified JavaScript to toggle the accordion
  document.addEventListener('DOMContentLoaded', function () {
    const categories = document.querySelectorAll('.category');

    categories.forEach((category) => {
      category.addEventListener('click', function () {
        const services = category.querySelector('.services');
        const toggleIcon = category.querySelector('.toggle-icon');
        
        // Toggle visibility of the services section
        services.classList.toggle('hidden');
        
        // Change the + to - when opened and vice versa
        if (services.classList.contains('hidden')) {
          toggleIcon.textContent = '+';
        } else {
          toggleIcon.textContent = '-';
        }
      });
    });
  });
</script>

<style>
  /* Button hover effect */
.hover\:shadow-glow:hover {
  box-shadow: 0 0 20px rgba(147, 112, 219, 0.8), 0 0 35px rgba(3, 169, 244, 0.6);
  transition: box-shadow 0.3s ease;
}

/* Frosted glass effect */
.bg-dark-frosted {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Gradient Bar for each category */
.relative::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2px;
  border-radius: 5px 5px 0 0;
}

/* Styling for the accordion */
.category {
  cursor: pointer;
  border-radius: 8px;
  margin-left: auto; /* Align the categories to the right */
  max-width: 500px; /* Shortened width */
}

.services.hidden {
  display: none;
}

.toggle-icon {
  transition: transform 0.3s ease;
}

.category .flex {
  justify-content: space-between;
  align-items: center;
}

.toggle-icon {
  margin-left: 12px; /* Adjust the space between text and plus icon */
}
</style>