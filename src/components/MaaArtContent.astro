<!-- Visual Experience Section with Image -->
<section class="relative mt-16" id="laptop-section">
  <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-24 md:mb-64">Experience the Art Digitally</h2>
  
  <!-- Image with responsiveness -->
  <div class="mt-8 relative mx-auto w-full max-w-5xl perspective-[1500px]">
    <img 
      src="/images/1-2.png" 
      alt="MAA Art Website on Laptop" 
      id="laptop-image"
      class="rounded-lg w-full h-auto object-contain"
      style="transform: rotateX(90deg); transform-origin: bottom; opacity: 0; transition: transform 1.2s ease, opacity 0.8s ease;"
    />
  </div>
</section>

<style>
  /* General laptop image style */
  #laptop-image {
    max-width: 100vw;
  }

  /* Larger image for mobile devices, full width */
  @media (max-width: 768px) {
    #laptop-image {
      transform: rotateX(90deg) scale(1.4); /* Full width for mobile */
      max-width: 120vw; /* Allow image to go slightly beyond the screen */
    }
  }

  /* Larger image for desktop */
  @media (min-width: 768px) {
    #laptop-image {
      transform: rotateX(90deg) scale(1.1); /* Bigger scale for desktop */
    }
  }
</style>

<script>
  // Function to handle the animation on scroll
  function handleScrollAnimation() {
    const laptopImage = document.getElementById('laptop-image');
    const laptopSection = document.getElementById('laptop-section');
    
    // Get the position of the section
    const sectionPos = laptopSection.getBoundingClientRect().top;
    const screenPos = window.innerHeight / 1.5;

    // Trigger the animation when the section comes into view
    if (sectionPos < screenPos) {
      laptopImage.style.opacity = '1';
      laptopImage.style.transform = 'rotateX(0deg) scale(1.4)'; // Adjusted for mobile and desktop
    } else {
      laptopImage.style.opacity = '0';
      laptopImage.style.transform = 'rotateX(90deg) scale(1.4)';
    }
  }

  // Event listener for scroll to trigger animation
  window.addEventListener('scroll', handleScrollAnimation);
</script>

